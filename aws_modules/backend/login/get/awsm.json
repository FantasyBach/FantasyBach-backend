{
  "lambda": {
    "envVars": [
      "AWS_ACCOUNT_ID",
      "COGNITO_IDENTITY_POOL_ID",
      "USERS_TABLE",
      "ROUNDS_TABLE"
    ],
    "deploy": true,
    "package": {
      "optimize": {
        "builder": "browserify",
        "minify": true,
        "ignore": [],
        "exclude": [
          "aws-sdk"
        ],
        "includePaths": [
          "node_modules/aws-sdk"
        ]
      },
      "excludePatterns": []
    },
    "cloudFormation": {
      "Description": "",
      "Handler": "aws_modules/backend/login/get/handler.handler",
      "MemorySize": 1024,
      "Runtime": "nodejs",
      "Timeout": 6
    }
  },
  "apiGateway": {
    "deploy": true,
    "cloudFormation": {
      "Type": "AWS",
      "Path": "login",
      "Method": "GET",
      "AuthorizationType": "none",
      "ApiKeyRequired": false,
      "RequestTemplates": {
        "application/json": "{\"token\":\"$input.params('token')\"}"
      },
      "RequestParameters": {
        "integration.request.querystring.integrationQueryParam": "method.request.querystring.token"
      },
      "Responses": {
        "400": {
          "statusCode": "400",
          "responseParameters": {
            "method.response.header.Access-Control-Allow-Origin": "'*'"
          }
        },
        "default": {
          "statusCode": "200",
          "responseParameters": {
            "method.response.header.Access-Control-Allow-Origin": "'*'"
          },
          "responseModels": {},
          "responseTemplates": {
            "application/json": ""
          }
        }
      }
    }
  }
}
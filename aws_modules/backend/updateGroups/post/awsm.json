{
  "lambda": {
    "envVars": [
      "ROUNDS_TABLE",
      "USERS_TABLE",
      "GROUPS_TABLE"
    ],
    "deploy": true,
    "package": {
      "optimize": {
        "builder": "browserify",
        "minify": true,
        "ignore": [],
        "exclude": [
          "aws-sdk"
        ],
        "includePaths": [
          "node_modules/aws-sdk"
        ]
      },
      "excludePatterns": []
    },
    "cloudFormation": {
      "Description": "",
      "Handler": "aws_modules/backend/updateGroups/post/handler.handler",
      "MemorySize": 1536,
      "Runtime": "nodejs",
      "Timeout": 180
    }
  },
  "apiGateway": {
    "deploy": false,
    "cloudFormation": {
      "Type": "AWS",
      "Path": "season/{seasonId}/updateGroups",
      "Method": "POST",
      "AuthorizationType": "AWS_IAM",
      "ApiKeyRequired": false,
      "RequestTemplates": {
        "application/json": "{\"seasonId\":\"$util.urlDecode($input.params('seasonId'))\"}"
      },
      "RequestParameters": {
        "integration.request.path.seasonId": "method.request.path.seasonId"
      },
      "Responses": {
        "400": {
          "statusCode": "400",
          "responseParameters": {
            "method.response.header.Access-Control-Allow-Origin": "'*'"
          }
        },
        "default": {
          "statusCode": "200",
          "responseParameters": {
            "method.response.header.Access-Control-Allow-Origin": "'*'"
          },
          "responseModels": {},
          "responseTemplates": {
            "application/json": ""
          }
        }
      }
    }
  }
}